<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".Fragments.Main.OdczytLicznikowFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinnerOdczyt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="50dp"></Spinner>

        <EditText
            android:id="@+id/wartosc_odczytu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/odczyt"
            android:inputType="numberDecimal"
            />

        <TextView
            android:id="@+id/data_odczytu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            />

        <Button
            android:id="@+id/dodaj_odczyt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dodaj"
            />


    </LinearLayout>
</FrameLayout>